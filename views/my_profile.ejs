							</section> -->
							
							<div class="f-row full">
								<input type="submit" class="button" id="submitRecipe" value="Publish this recipe" />
							</div>
						</form>
					</div>
				</section>
				<!--//content-->
						</div>
						<!--//my favorites-->
						
						<!--my posts NOW MY FAMILY-->
